<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:id="@+id/player1_and_player2"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:id="@+id/player1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.45">
            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/player1_value"
                android:layout_marginTop="4dp"
                android:textSize="18sp"
                tools:text="Three of a kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:id="@+id/cardContainer_player1"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:orientation="horizontal"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:textSize="18sp"
                tools:text="200"
                android:id="@+id/player1_betMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/winner_textView"
            android:gravity="center"
            tools:text="Placeholder for winner"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.1"/>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/player2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.45">
            <TextView
                android:id="@+id/player2_betMoney"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="200"
                android:textSize="18sp"
                android:layout_marginBottom="4dp"
                />
            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:id="@+id/cardContainer_player2"
                android:layout_width="wrap_content"
                android:layout_height="80dp">
            </LinearLayout>
            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/player2_value"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:layout_marginBottom="8dp"
                tools:text="Three of a kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="18dp"
        android:id="@+id/fold_btn"
        android:layout_alignParentBottom="true"
        android:text="Fold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp" />
    <Button
        android:layout_marginLeft="18dp"
        android:layout_alignBaseline="@id/fold_btn"
        android:id="@+id/check_btn"
        android:layout_toRightOf="@id/fold_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check"
        android:layout_toEndOf="@id/fold_btn" />
    <Button
        android:id="@+id/call_btn"
        android:text="Call"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/fold_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@id/fold_btn" />
    <Button
        android:layout_marginLeft="18dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:id="@+id/bet_btn"
        android:text="Bet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/fold_btn"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:layout_marginTop="8dp"
        android:text="Restart"
        android:id="@+id/start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp" />
    <TextView
        android:padding="8dp"
        android:id="@+id/player_turn_tv"
        android:textSize="24sp"
        tools:text="Player 1"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="24dp"
        android:layout_centerVertical="true"
        android:textSize="24sp"
        android:id="@+id/total_bet_money"
        tools:text="200"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp" />
    <SeekBar
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/bet_amount_sb"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_alignLeft="@id/bet_amount_sb"
        android:id="@+id/bet_amount_tv"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:layout_below="@id/bet_amount_sb"
        android:layout_width="wrap_content"
        tools:text="200"
        android:layout_height="wrap_content"/>
</RelativeLayout>